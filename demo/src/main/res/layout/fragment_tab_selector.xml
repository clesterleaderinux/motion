<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:textAppearance="@style/TextAppearance.Fluent2.Title1"
        android:layout_marginBottom="8dp" />

    <com.microsoft.fluentxml.components.TabSelector
        android:id="@+id/tab_selector"
        style="@style/TabSelector"
        app:tabRoleDescription="Tab"
        app:tabContentDescriptionResId="@string/tab_selector_content_description"
        app:tabBadgeContentDescription="New notification"
        app:tabLabels="@array/tab_labels" />

    <TextView
        android:id="@+id/second_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Fluent2.Title1"
        android:text="Files Disabled"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp" />

    <com.microsoft.fluentxml.components.TabSelector
        android:id="@+id/disabled_tab_selection_selector"
        style="@style/TabSelector"
        app:tabRoleDescription="Tab"
        app:tabContentDescriptionResId="@string/tab_selector_content_description"
        app:tabBadgeContentDescription="New notification"
        app:tabLabels="@array/tab_labels" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enable_button"
        android:layout_marginTop="18dp"
        style="@style/Widget.Fluent2.Button.Accent.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Enable Files" />
</LinearLayout>
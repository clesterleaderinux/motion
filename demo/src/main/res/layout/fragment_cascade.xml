<?xml version="1.0" encoding="utf-8"?>
<com.microsoft.fluentmotion.ui.xml.layouts.MotionViewLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enter_exit"
        style="@style/Widget.Fluent2.Button.Accent.Large"
        android:layout_margin="20dp"
        android:enabled="true"
        android:focusable="true"
        android:text="@string/enter_and_exit" />

    <View
        android:id="@+id/cascade1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="@color/teal_200"
        android:elevation="4dp" />

    <View
        android:id="@+id/cascade2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="?attr/colorBrandBackground1"
        android:elevation="4dp" />

    <View
        android:id="@+id/cascade3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="@color/black"
        android:elevation="4dp" />

    <View
        android:id="@+id/cascade4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="?attr/colorNeutralBackground1"
        android:elevation="4dp" />

    <View
        android:id="@+id/cascade5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="@color/teal_700"
        android:elevation="4dp" />
</com.microsoft.fluentmotion.ui.xml.layouts.MotionViewLinearLayout>


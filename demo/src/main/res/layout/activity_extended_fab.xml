<?xml version="1.0" encoding="utf-8"?>
<com.microsoft.fluentmotion.ui.xml.layouts.MotionViewFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExtendedFabActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ExtendedFabActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:elevation="10dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipChildren="false"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <com.microsoft.fluentmotion.ui.xml.layouts.MotionViewLinearLayout
                        android:id="@+id/sliding_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/pivot_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:background="?attr/colorNeutralBackground2"
                            android:src="@drawable/photospivot" />

                        <com.microsoft.fluentmotion.ui.xml.components.MotionViewTabLayout
                            android:id="@+id/horizontalSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="-20dp"
                            app:indicator_start_margin="0dp"
                            app:tabGravity="fill"
                            app:tabMode="fixed" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="?attr/colorNeutralBackground1"
                            android:elevation="6dp" />

                    </com.microsoft.fluentmotion.ui.xml.layouts.MotionViewLinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.microsoft.fluentxml.components.MotionViewSearchFab
            android:id="@+id/search_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="44dp"
            app:hintSearchText="@string/hint_search_text" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.microsoft.fluentmotion.ui.xml.layouts.MotionViewFrameLayout>